<UserControl x:Class="IntegralSchematicTest.Controls.FunctionToInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntegralSchematicTest.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
         
          
                
            <Grid x:Name="InputGrid" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="N" Grid.Column="0" Margin="3"/>
                <Label Content="Function Name" Margin="3" Grid.Column="1"/>
                <Label Content="Function" Margin="3" Grid.Column="2" Width="100"/>
            </Grid>
            <Button Content="Calculate" Visibility="Hidden" x:Name="calculateBtn"/>
        </StackPanel>
    </Grid>
</UserControl>
